{
  "name": "Twitch Point Collector",
  "description": "Collects Twitch points for you",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["content_scripts/collect-points.js"],
      "run_at": "document_end"
    }
  ]
}
